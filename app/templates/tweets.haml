%%def(name="render_tweet(tweet)")
    %blockquote.tweet ${tweet}

    %small ${tweet.created_at}

%%def(name="render_tweets(tweets)")
    %ul.marks
        - if not tweets:
            %li.banana Nothing #markd yet! |
                %a(href="http://twitter.com", rel="external") Get to tweeting!
        - for tweet in tweets:
            %li ${self.render_tweet(tweet)}

%li.panel(id="by_me")
    %h3 \#markd by
        %a(href=v.urls.twitter.user % v.screen_name)
            @${v.screen_name}

    ${render_tweets(v.by_me)}

%li.panel(id="for_me")
    %h3 \#markd for
        %a(href=v.urls.twitter.user % v.screen_name)
            @${v.screen_name}

    ${render_tweets(v.for_me)}
